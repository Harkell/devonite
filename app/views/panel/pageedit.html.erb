<div class="narrow">
  <div class="large-9 columns text-left">
    <%= image_tag("logo.png", class: "margin2v padding12h") %>
  </div>
  <div class="large-2 columns text-right">
    <a href="<%= root_path %>" class="websitebutton margin25t margin2b"><span class="margin1v padding1h">BACK TO WEBSITE</span></a>
  </div> 
  <div class="large-1 columns text-right">
    <%= link_to(destroy_user_session_path, :method => :delete) do %><div class="logoutbutton margin25t margin2b"><span class="margin1v padding1h">LOGOUT</span></div><% end %>
  </div> 
</div> 

<div class="narrow">
  <div class="pcontainer">
    <div class="row lineheight0">
      <div class="large-12 columns">
        <div class="icon-bar four-up">
          <%= link_to(panel_statistics_path, class: "item") do %>
            <%= image_tag "icon1.png" %>
            <label>Dashboard</label>
          <% end %>
          <%= link_to(panel_pageedit_path, class: "item") do %>
            <%= image_tag "icon2.png" %>
            <label>Edit Content</label>
          <% end %>
          <%= link_to(panel_requestchange_path, class: "item") do %>
            <%= image_tag "icon3.png" %>
            <label>Request Change</label>
          <% end %>
          <%= link_to(panel_payment_path, class: "item") do %>
            <%= image_tag "icon4.png" %>
            <label>Manage Payments</label>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns text-center">
        <div class="gcontainer">
          <h4 class="margin0 padding07v">Edit Content</h4>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <ul class="tabs" data-tab>
          <li class="tab-title active"><a href="#home">HOME</a></li>
          <li class="tab-title"><a href="#howitworks">HOW IT WORKS</a></li>
          <li class="tab-title"><a href="#blog">BLOG</a></li>
          <li class="tab-title"><a href="#panel2-4">CONNECT</a></li>
        </ul>
        <div class="tabs-tabcontent">
          <div class="tabcontent active" id="home">
            <div class="blue content margin2t">
              <notice><%= notice %></notice>
              <%= form_for(@content) do |f| %>
                <%= f.label "First Header" %>
                <%= f.text_field :header1 %>
                <%= f.label "Second Header" %>
                <%= f.text_field :header2 %>
                <%= f.label "First Header, first section" %>
                <%= f.text_field :section1header1 %>
                <%= f.label "First paragraph, first section" %>
                <%= f.text_area :section1paragraph1 %>
                <%= f.label "First Header, second section" %>
                <%= f.text_field :section2header1 %>
                <%= f.label "First paragraph, second section" %>
                <%= f.text_area :section2paragraph1 %>
                <%= f.label "Second paragraph, second section" %>
                <%= f.text_area :section2paragraph2 %>
                <%= f.label "First Header, third section" %>
                <%= f.text_field :section3header1 %>
                <%= f.label "First paragraph, third section" %>
                <%= f.text_area :section3paragraph1 %>
                <%= f.submit %>
              <% end %>
            </div>
          </div>
          <div class="tabcontent" id="howitworks">
            <div class="blue content margin2t">
              <p>Instert second panel content here</p>
            </div>
          </div>
          <div class="tabcontent" id="blog">
            <div class="blue content margin2t">
              <p>Instert third panel content here</p>
              <%= form_for(@blogPost) do |f| %>
                <%= f.label "Title" %>
                <%= f.text_field :title %>
                <%= f.label "Content" %>
                <%= f.text_area :content %>
                <%= f.submit "Create Blog Post" %>
              <% end %>
              <p>Instert third panel content here</p>
              <% @blogs.each do |post| %>
                <%= post.title %>
                <%= post.created_at.to_s(:short) %>
                <%= link_to 'Edit', root_path %>
                <%= link_to 'Destroy', post, method: :delete %><br>
              <% end %>
            </div>
          </div>
          <div class="tabcontent" id="panel2-4">
            <div class="blue content margin2t">
              <p>Instert fourth panel content here</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  <div class="dgcontainer">
    <div class="narrow">
      <div class="large-12 columns text-center">
        <%= image_tag("footerlogo.png", class: "margin2v") %>
      </div>
    </div>
  </div>