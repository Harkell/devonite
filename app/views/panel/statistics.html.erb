<%= render "bar" %>
<div class="narrow">
  <div class="large-12 columns text-center">
    <div class="gcontainer">
      <h4 class="margin0 padding07v">Dashboard</h4>
    </div>
  </div>
</div>
 
<div class="narrow">
  <div class="pcontainer">
    <div class="row lgcontainer2">
      <div class="large-6 columns">
        <p class="lineheight0 margin15">welcome, <%= current_user.email %></p>
      </div>
      <div class="large-6 columns text-right">
        <p class="lineheight0 margin15"><%= Time.now.to_date.to_formatted_s(:long_ordinal) %> | <%= Time.now.strftime('%R') %></p>
      </div>
    </div>
    <div class="row padding2v">
      <div class="large-3 columns content text-center">
        <div class="bcontainer padding1v">
          <h1><%= time_ago_in_words(@creationTime) %></h1>
          <p>days online</p>
        </div>
      </div>
      <div class="large-3 columns content text-center">
        <div class="bcontainer padding1v">
          <h1>3,000</h1>
          <p>page views</p>
        </div>
      </div>
      <div class="large-3 columns content text-center">
        <div class="bcontainer padding1v">
          <h1>2</h1>
          <p>dickheads</p>
        </div>
      </div>
      <div class="large-3 columns content text-center">
        <div class="bcontainer padding1v">
          <h1><%= @blogCount %></h1>
          <p>blog posts</p>
        </div>
      </div>
    </div>
    <div class="row text-center blue">
      <% if @subscription == true %>
        <h3 class="margin2t">You are due to pay your subscription</h3><br>
        <h4 class="margin2b"><%= link_to 'To begin your subscription with devonite, click here.', new_charge_path %></h4>
      <% else %>
        <h3 class="margin2v">Your devonite subscription is <b>active</b>.</h3>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Click here to change your account password", edit_user_registration_path %>
<div class="dgcontainer">
  <div class="narrow">
    <div class="large-12 columns text-center">
      <%= image_tag("footerlogo.png", class: "margin2v") %>
    </div>
  </div>
</div>

