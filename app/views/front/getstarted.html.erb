<%
meta title: "Devonite | Get Started",
     description: "Ready to launch your business website? Lets talk.",
     keywords: %w(website design devon get started)
%>

<div class="grcontainer">

  <div class="narrow">
    <div class="large-12 columns content">
      <% if flash[:notice] %>
        <div data-alert class="alert-box success radius content">
          <%= notice %>
          <a href="" class="close">&times;</a>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div data-alert class="alert-box alert radius content">
            <%= alert %>
          <a href="" class="close">&times;</a>
        </div>
      <% end %>
    </div>
  </div>
	
	<div class="narrow">
		<div class="large-12 columns text-left content">
			<h3 class="margin2v">Lets talk about your future online</h3>
		</div>
	</div>

	<div class="narrow getstartedform">
		<div class="large-12 columns content padding2t3b">
			<%= form_for(@proposal) do |f| %>
				<%= f.text_field :name, class: "getstartedform", :required => true, :placeholder => "Name" %>
				<%= f.text_field :email, class: "getstartedform", :required => true, :placeholder => "Email" %>
				<%= f.text_field :business, class: "getstartedform", :required => false, :placeholder => "Business Name" %>
				<%= f.text_field :mobile, class: "getstartedform", :required => true, :numerical => true, :placeholder => "Mobile" %>
				<%= f.submit "Submit" %>
			<% end %>
		</div>
	</div>
</div>
<%= render "layouts/footer" %>