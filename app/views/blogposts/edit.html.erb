<% if user_signed_in? %>
  <%= form_for(@blogEdit) do |f| %>
    <div class="row blogimg">
    	<div class="large-3 columns">
    		<br>
    	</div>
      <div class="large-6 columns text-center">
  			<div class="margin4v"><%= f.text_field(:title, class: "") %></div>
      </div>
      <div class="large-3 columns">
      	<br>
      </div>
    </div>
    <div class="row wcontainer">
    	<div class="large-3 columns">
    		<br>
    	</div>
    	<div class="large-6 columns">
    		<div class="margin4v">
  				<%= f.text_area(:content, class: "height15") %>
          <%= f.text_field(:image) %>
  				<%= f.submit "Update Blog Post" %>
  			</div>
  		</div>
  		<div class="large-3 columns">
  			<br>
  		</div>
  	</div>
  <% end %>
<% else %>
<div class="row">
  <div class="large-12 columns text-center">
    <h1>Not Logged In.</h1>
  </div>
</div>
<% end %>