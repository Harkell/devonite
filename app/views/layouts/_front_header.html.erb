  <div class="frontheader navrow">
    <div class="large-2 columns left">
      <%= image_tag("logo.png", class: "logo margin2v padding12h") %>
    </div>
    <div class="large-9 columns">
      <ul class="inline-list nav blue margin26t right logo">
        <li><%= link_to(root_path) do %>HOME<% end %></li>
        <li>     |     </li>
        <li><%= link_to(front_howitworks_path) do %>HOW IT WORKS<% end %></li>
        <li>     |     </li>
        <li><%= link_to(front_blog_path) do %>BLOG<% end %></li>
        <li>     |     </li>
        <li><%= link_to(front_support_path) do %>SUPPORT<% end %>
        </li>
      </ul>
    </div>
    <div class="large-1 columns logo">
      <a href="http://www.twitter.com/devoniteuk" target="_blank"><div class="loginbutton"><%= image_tag("twitterbird.png", class: "") %><span class="margin01t"></span></div></a>
    </div>
  </div> 

  <div class="mobilefrontheader row content">
    <div class="row">
      <div class="small-12 columns text-center">
        <%= image_tag("logo.png", class: "margin1t") %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns text-center content">
        <ul class="no-bullet nav blue margin26t">
          <%= link_to(root_path) do %><li class="mobilenav">HOME</li><% end %><br>
          <%= link_to(front_howitworks_path) do %><li class="mobilenav">HOW IT WORKS</li><% end %><br>
          <%= link_to(front_blog_path) do %><li class="mobilenav">BLOG</li><% end %><br>
          <%= link_to(front_support_path) do %><li class="mobilenav">SUPPORT
          </li><% end %>
        </ul>
      </div>
    </div>
  </div> 

  <div class="narrow">
    <div class="large-12 columns content">
      <% if flash[:notice] %>
        <div data-alert class="alert-box success radius content">
          <%= notice %>
          <a href="" class="close">&times;</a>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div data-alert class="alert-box alert radius content">
            <%= alert %>
          <a href="" class="close">&times;</a>
        </div>
      <% end %>
    </div>
  </div>

