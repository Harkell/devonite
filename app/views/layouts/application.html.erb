<!DOCTYPE html>
<html>
<head>
  <title>Devonite</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Sanchez:400italic' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navrow">
  <div class="large-2 columns left">
    <%= image_tag("logo.png", class: "margin2v padding12h") %>
  </div>
  <div class="large-9 columns">
    <ul class="inline-list nav blue margin26t right">
      <li><%= link_to(root_path) do %>HOME<% end %></li>
      <li>     |     </li>
      <li><%= link_to(front_howitworks_path) do %>HOW IT WORKS<% end %></li>
      <li>     |     </li>
      <li><%= link_to(front_blog_path) do %>BLOG<% end %></li>
      <li>     |     </li>
      <li><%= link_to(front_support_path) do %>SUPPORT<% end %>
      </li>
    </ul>
  </div>
  <div class="large-1 columns">
    <a href="http://www.twitter.com/devoniteuk" target="_blank"><div class="loginbutton"><%= image_tag("twitterbird.png", class: "") %><span class="margin01t"></span></div></a>
  </div>
</div> 

<div class="narrow">
  <div class="large-12 columns content">
    <% if flash[:notice] %>
      <div data-alert class="alert-box success radius content">
        <%= notice %>
        <a href="" class="close">&times;</a>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div data-alert class="alert-box alert radius content">
          <%= alert %>
        <a href="" class="close">&times;</a>
      </div>
    <% end %>
  </div>
</div>

<%= yield %>

  <div class="dgcontainer">
    <div class="narrow">
      <div class="large-12 columns text-center">
        <% if user_signed_in? %>
          <%= link_to(panel_statistics_path) do %>
            <%= image_tag("footerlogo.png", class: "margin2v") %>
          <% end %>
          <% else %>
            <%= link_to(new_user_session_path) do %>
              <%= image_tag("footerlogo.png", class: "margin2v") %>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>

</body>
</html>
